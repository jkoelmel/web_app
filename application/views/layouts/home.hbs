{{#if logged}}
    <script type="text/javascript">
        let el = document.getElementById('logout');
        if (el) {
            el.onclick = (event) => {
                fetch('/users/logout', {
                    method: "POST"
                })
                .then((data) => {
                    location.reload();
                })
            }
        }
    </script>
{{/if}}
</body>

</html>